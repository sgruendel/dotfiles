{
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.iconTheme": "catppuccin-mocha",
  "github.copilot.nextEditSuggestions.enabled": true,
  "[powershell]": {
    "debug.saveBeforeStart": "nonUntitledEditorsInActiveGroup",
    "editor.semanticHighlighting.enabled": false,
    "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
  },
  "python.defaultInterpreterPath": ".venv/bin/python",
  "python.terminal.activateEnvironment": true,
  "files.autoSave": "onWindowChange",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "vim.leader": "<space>",
  "vim.hlsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.useSystemClipboard": true,
  // my stuff based on LazyVim keymaps
  "vim.normalModeKeyBindingsNonRecursive": [
    // General https://www.lazyvim.org/keymaps#general
    {
      "before": ["H"],
      "commands": ["workbench.action.previousEditor"],
    },
    {
      "before": ["L"],
      "commands": ["workbench.action.nextEditor"],
    },
    {
      "before": ["[", "b"],
      "commands": ["workbench.action.previousEditor"],
    },
    {
      "before": ["]", "b"],
      "commands": ["workbench.action.nextEditor"],
    },
    {
      "before": ["<leader>", "b", "b"],
      "commands": ["workbench.action.previousEditor"],
    },
    {
      "before": ["<leader>", "b", "d"],
      "commands": ["workbench.action.closeActiveEditor"],
    },
    {
      "before": ["<leader>", "b", "o"],
      "commands": ["workbench.action.closeOtherEditors"],
    },
    {
      "before": ["<Esc>"],
      "after": ["<Esc>"],
      "commands": [":nohl"],
    },
    {
      "before": ["g", "c", "o"],
      "commands": [
        "editor.action.insertLineAfter",
        "editor.action.commentLine",
      ],
    },
    {
      "before": ["g", "c", "s-o"],
      "commands": [
        "editor.action.insertLineBefore",
        "editor.action.commentLine",
      ],
    },
    {
      "before": ["<leader>", "c", "f"],
      "commands": ["editor.action.formatDocument"],
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"],
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"],
    },
    {
      "before": ["[", "e"],
      "commands": ["editor.action.marker.prev"],
    },
    {
      "before": ["]", "e"],
      "commands": ["editor.action.marker.next"],
    },
    {
      "before": ["[", "w"],
      "commands": ["editor.action.marker.prev"],
    },
    {
      "before": ["]", "w"],
      "commands": ["editor.action.marker.next"],
    },
    {
      "before": ["<leader>", "-"],
      "commands": ["workbench.action.splitEditorDown"],
    },
    {
      "before": ["<leader>", "w", "s"],
      "commands": ["workbench.action.splitEditorDown"],
    },
    {
      "before": ["<leader>", "|"],
      "commands": ["workbench.action.splitEditorRight"],
    },
    {
      "before": ["<leader>", "w", "v"],
      "commands": ["workbench.action.splitEditorDown"],
    },
    {
      "before": ["<leader>", "w", "d"],
      "commands": ["workbench.action.closeActiveEditor"],
    },
    {
      "before": ["<leader>", "w", "w"],
      "commands": ["workbench.action.switchWindow"],
    },
    // LSP https://www.lazyvim.org/keymaps#lsp
    {
      "before": ["g", "r"],
      "commands": ["editor.action.referenceSearch.trigger"],
    },
    {
      "before": ["<leader>", "c", "o"],
      "commands": ["editor.action.organizeImports"],
    },
    {
      "before": ["<leader>", "c", "r"],
      "commands": ["editor.action.rename"],
    },
    // https://www.lazyvim.org/keymaps#snacksnvim
    {
      "before": ["<leader>", "<space>"],
      "commands": ["workbench.action.quickOpen"],
    },
    {
      "before": ["<leader>", ","],
      "commands": ["buffers.showOpenBuffers"],
    },
    {
      "before": ["<leader>", "/"],
      "commands": ["workbench.action.findInFiles"],
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.view.explorer"],
    },
    {
      "before": ["<leader>", "f", "b"],
      "commands": ["buffers.showOpenBuffers"],
    },
    {
      "before": ["<leader>", "f", "B"],
      "commands": ["buffers.showOpenBuffers"],
    },
    {
      "before": ["<leader>", "f", "e"],
      "commands": ["workbench.view.explorer"],
    },
    {
      "before": ["<leader>", "f", "E"],
      "commands": ["workbench.view.explorer"],
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.files.openFile"],
    },
    {
      "before": ["<leader>", "f", "F"],
      "commands": ["workbench.action.files.openFile"],
    },
    {
      "before": ["<leader>", "f", "r"],
      "commands": ["workbench.action.quickOpenRecent"],
    },
    // git
    {
      "before": ["<leader>", "g", "b"],
      "commands": ["git.blame.toggleEditorDecoration"],
    },
    {
      "before": ["<leader>", "g", "d"],
      "commands": ["gitlens.diffWithPrevious"],
    },
    {
      "before": ["<leader>", "g", "D"],
      "commands": ["gitlens.diffWithWorking"],
    },
    {
      "before": ["<leader>", "g", "g"],
      "commands": ["workbench.view.scm"],
    },
    {
      "before": ["<leader>", "g", "G"],
      "commands": ["workbench.view.scm"],
    },
    {
      "before": ["<leader>", "g", "l"],
      "commands": ["workbench.scm.history.focus"],
    },
    {
      "before": ["<leader>", "g", "L"],
      "commands": ["workbench.scm.history.focus"],
    },

    // LSP https://www.lazyvim.org/keymaps#lsp
    {
      "before": ["g", "y"],
      "commands": ["editor.action.goToTypeDefinition"],
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"],
    },
    {
      "before": ["g", "I"],
      "commands": ["editor.action.goToImplementation"],
    },
    {
      "before": ["<leader>", "c", "R"],
      "commands": ["git.rename"],
    },
    {
      "before": ["<leader>", "c", "r"],
      "commands": ["editor.action.rename"],
    },
    {
      "before": ["]", "]"],
      "commands": ["editor.action.nextSelectionMatchFindAction"],
    },
    {
      "before": ["[", "["],
      "commands": ["editor.action.previousSelectionMatchFindAction"],
    },
    {
      "before": ["<leader>", "s", "s"],
      "commands": ["workbench.action.gotoSymbol"],
    },
    {
      "before": ["<leader>", "c", "s"],
      "commands": ["workbench.action.gotoSymbol"],
    },
    {
      "before": ["<leader>", "s", "S"],
      "commands": ["workbench.action.showAllSymbols"],
    },
    {
      "before": ["<leader>", "c", "S"],
      "commands": ["workbench.action.showAllSymbols"],
    },
  ],
  "vim.smartRelativeLine": true,
  "vim.statusBarColorControl": true,
  //"vim.statusBarColors.normal": ["#8FBCBB", "#434C5E"],
  "vim.statusBarColors.normal": ["#89a5e8", "#292b3b"],
  "vim.statusBarColors.insert": "#a2ca86",
  "vim.statusBarColors.visual": "#c599e0",
  "vim.statusBarColors.visualline": "#B48EAD",
  "vim.statusBarColors.visualblock": "#A3BE8C",
  "vim.statusBarColors.replace": "#D08770",
  "vim.statusBarColors.commandlineinprogress": "#e99a73",
  "vim.statusBarColors.searchinprogressmode": "#007ACC",
  "vim.statusBarColors.easymotionmode": "#007ACC",
  "vim.statusBarColors.easymotioninputmode": "#007ACC",
  "vim.statusBarColors.surroundinputmode": "#007ACC",
}
